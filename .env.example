# Food Ordering System Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# SECURITY SETTINGS (CRITICAL)
# ============================================

# Django SECRET_KEY - Generate a unique key for production
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-characters

# Encryption salt for field-level encryption
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
# IMPORTANT: Changing this after deployment will break access to encrypted data!
ENCRYPTION_SALT=your-custom-encryption-salt-v1-change-in-production

# ============================================
# DEBUG & HOSTS
# ============================================

# Set to False in production
DEBUG=False

# Allowed hosts for the application
ALLOWED_HOSTS=localhost,127.0.0.1,tetech.in,www.tetech.in,demo.tetech.in

# ============================================
# DATABASE SETTINGS
# ============================================

# PostgreSQL database configuration
DB_NAME=food_ordering_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# EMAIL SETTINGS
# ============================================

# Email backend for sending notifications
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default from email for system emails
DEFAULT_FROM_EMAIL=noreply@tetech.in

# ============================================
# SESSION SETTINGS
# ============================================

# Session timeout in seconds (60 minutes)
SESSION_COOKIE_AGE=3600

# Inactivity timeout settings
SESSION_INACTIVITY_TIMEOUT=1800  # 30 minutes for customers
SESSION_STAFF_INACTIVITY_TIMEOUT=3600  # 60 minutes for staff
SESSION_WARNING_TIME=120  # Show warning 2 minutes before timeout

# ============================================
# OPTIONAL: Third-party Services
# ============================================

# Twilio for SMS notifications (optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379/1

# ============================================
# PRODUCTION NOTES
# ============================================

# 1. Always use HTTPS in production
# 2. Keep SECRET_KEY and ENCRYPTION_SALT secure and private
# 3. Use strong, unique passwords for database
# 4. Configure proper email settings for notifications
# 5. Set DEBUG=False in production
# 6. Regular backup of database and encryption keys
# 7. Monitor security logs for unauthorized access

# ============================================
# ENCRYPTION BACKUP PROCEDURE
# ============================================

# After setting up encryption, create secure backups:
# 1. Backup database: pg_dump -U postgres food_ordering_db > backup.sql
# 2. Backup .env file (store securely)
# 3. Document rotation schedule (annually recommended)
# 4. Test restore procedures regularly
