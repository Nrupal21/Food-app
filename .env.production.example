# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and update with your production values
# NEVER commit .env file with real credentials to version control

# ============================================
# DJANGO CORE SETTINGS
# ============================================
# Set to False in production for security
DEBUG=False

# Generate a new secret key for production using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-production-secret-key-here-must-be-changed

# Comma-separated list of allowed hosts (your domain names)
# Example: yourdomain.com,www.yourdomain.com,api.yourdomain.com
ALLOWED_HOSTS=tetech.in,www.tetech.in,demo.tetech.in

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Production database credentials
DB_NAME=food_ordering_production
DB_USER=food_ordering_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# For managed database services (e.g., AWS RDS, DigitalOcean):
# DB_HOST=your-database-host.region.rds.amazonaws.com
# DB_PORT=5432

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Email service for sending notifications
# Gmail example (use App Password, not regular password):
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=Tetech Food Ordering <noreply@tetech.in>

# For other email providers:
# SendGrid: smtp.sendgrid.net, Port 587
# Mailgun: smtp.mailgun.org, Port 587
# AWS SES: email-smtp.region.amazonaws.com, Port 587

# ============================================
# PAYMENT GATEWAY CONFIGURATION
# ============================================
# Razorpay LIVE API credentials (NOT test keys)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXXXXXXXX
RAZORPAY_KEY_SECRET=your_live_secret_key_here

# ============================================
# SMS NOTIFICATIONS (Optional - Twilio)
# ============================================
# Uncomment and configure if using SMS notifications
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# SECURITY SETTINGS
# ============================================
# Session timeout in seconds (default: 3600 = 1 hour)
SESSION_COOKIE_AGE=3600
SESSION_INACTIVITY_TIMEOUT=1800

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_NAME=Tetech Food Ordering
SITE_DOMAIN=tetech.in
SITE_URL=https://tetech.in

# ============================================
# ADDITIONAL PRODUCTION SETTINGS
# ============================================
# Set to your timezone
TIME_ZONE=Asia/Kolkata

# Language code
LANGUAGE_CODE=en-us
